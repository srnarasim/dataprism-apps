{
  "name": "@dataprism/ironcalc-spreadsheet",
  "version": "1.0.0",
  "type": "module",
  "description": "Excel-compatible spreadsheet application powered by DataPrism and IronCalc formula engine",
  "keywords": [
    "dataprism",
    "spreadsheet",
    "excel",
    "formula",
    "ironcalc",
    "wasm",
    "analytics"
  ],
  "private": true,
  "scripts": {
