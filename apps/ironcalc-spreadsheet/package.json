    "@testing-library/user-event": "^14.5.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29"
  },
  "engines": {
    "node": ">=18.0.0"
