    "react-window-infinite-loader": "^1.0.9",
    "react-virtualized-auto-sizer": "^1.0.20",
    "papaparse": "^5.4.1",
    "xlsx": "^0.18.5",
    "react-dropzone": "^14.2.3",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0",
    "hotkeys-js": "^3.13.7",
    "@tanstack/react-query": "^4.35.0"
